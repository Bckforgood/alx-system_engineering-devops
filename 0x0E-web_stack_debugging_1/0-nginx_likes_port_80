#!/bin/env bash

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Modify Nginx configuration to listen on port 80 for all active IPv4 IPs
sed -i '/listen 80 default_server;/c\    listen 80;' /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart

# Display the Nginx status to confirm it's running and listening on port 80
service nginx status

echo "Nginx is now listening on port 80 of all active IPv4 IPs."
